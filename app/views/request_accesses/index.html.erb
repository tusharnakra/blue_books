<%- model_class = RequestAccess -%>

<div class="container">
  <%= render :partial => 'navBar' %>
  <h4><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h4>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:subject) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @request_accesses.each do |request_access| %>
      <tr>
        <td><%= link_to request_access.id, request_access_path(request_access) %></td>
        <td><%= request_access.subject %></td>
        <td><%= request_access.description %></td>
        <td><%=l request_access.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_request_access_path(request_access), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      request_access_path(request_access),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_request_access_path,
            :class => 'btn btn-primary' %>
  </div>
</div>