<%- model_class = Book -%>
<div class="container">
    <%= render :partial => 'navBar' %>

    <%= link_to "New Book", new_book_path, class: "btn btn-primary" %>
    <br />
    <br />
    <%= form_tag book_search_path, :method => 'get' do %>
    
    <table>
      <tr>
        <td>
        <h6> Search for a Book</h6>
        <hr>
      </td>
      </tr>
      <tr>
        <td><%= model_class.human_attribute_name(:name) %><br>
            <%= text_field_tag :book_search, params[:book_search]%>
        </td>        
      </tr>
      
      <tr>
        <td>
          <%= submit_tag "Search", :name => nil, :class => "btn btn-default" %>
        </td>
      </tr>
      
    </table>
    <% end %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= model_class.human_attribute_name(:name) %></th>
          <th>Download Link</th>
          <th><%=t '.actions', :default => t("helpers.actions") %></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= link_to book.name, showBook_pdf_path(book) %></td>
            <td><%= link_to "Download Book", book.attachment_url, :class => "btn btn-default", :target => "_blank" %></td>
            <td><%= button_to "Delete",  book, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{book.name}?" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
</div>